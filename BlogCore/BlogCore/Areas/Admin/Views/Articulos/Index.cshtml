@{
    ViewData["Title"] = "Lista de Articulos";
}
<div class="container  mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Lista de Artículos</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="Create" class="btn btn-primery"><i class="fa-solid fa-plus"></i> Crear Nuevo Artículo</a>
        </div>
    </div>
    <br />
    <br />
    <table id="tblArticulos" class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                <td>Id</td>
                <td>Nombre</td>
                <td>Categoría</td>
                <td>Imagen</td>
                <td>fecha de Creación</td>
                <td>Acciones</td>
            </tr>
        </thead>
    </table>

</div>

@section Scripts { 
    <script src="~/js/articulo.js"></script>
}

