@model BlogCore.Models.ViewModels.HomeVM
@{
    ViewData["Title"] = "Inicio";
}

<div class="row mt-1">
    <diV class="col-sm-12">
        <h1 class="text-center text-white bg-secondary py-1">Últimos Cursos y Tutoriales</h1>
    </div>
</div>
   
@if (Model.ListaArticulos.Count() > 0)
        {
            <hr/>
            <div class="row">
                @foreach (var articulo in Model.ListaArticulos.OrderBy(o => o.Id))
                {
                    <div class="col-4">
                        <div class="card">
                            <div>                        
                                <img src="@articulo.UrlImagen" class="img-thumbnail" style="width:100%;height:300px;" />
                                <div class="card-body">
                                    <h5 class="text-center">@articulo.Nombre</h5>
                                    <a asp-action="Detalle" class="btn btn-success" style="border-radius:10px;" asp-route-id="@articulo.Id">
                                        Más información
                                    </a>                                       
                                </div>
                            </div>            
                        </div>                
                    </div>
                }
            </div>
        }
else
        {
            <p>No hay artículos</p>
        }

